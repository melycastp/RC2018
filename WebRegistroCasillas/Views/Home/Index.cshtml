@model WebRegistroCasillas.Models.Login

@{
    ViewBag.Title = "Iniciar Sesión";
}

<div class="row">
    <div class="col-lg-offset-3">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @style = "color: red" })
            @Html.HiddenFor(model => model.Type)

            <h2>Bienvenido</h2>
            <fieldset>
                <legend>Iniciar Sesión</legend>

                <div class="form-group center-block">
                    @Html.LabelFor(model => model.Username, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Usuario" })
                        @Html.ValidationMessageFor(model => model.Username, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group center-block">
                    @Html.LabelFor(model => model.Password, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(model => model.Password,null, new { @class = "text-danger"})
                    </div>
                </div>
                @if (ViewBag.Error != null)
                {
                    <p class="text-danger">@ViewBag.Error</p>
                }
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button onclick="LoginType('A')" class="btn btn-success">Presidente Municipal</button><br /><br />
                        <button onclick="LoginType('D')" class="btn btn-info">Diputados Locales</button><br /><br />
                        <button onclick="LoginType('F')" class="btn btn-default">Diputados Federales</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function LoginType(type) {
            $("#Type").val(type);
            $(this).submit();
        }
    </script>
}